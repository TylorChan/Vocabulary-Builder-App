{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Mark1",
    "description": "Vocabulary Builder - Track captions from videos",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "serviceWorker.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs",
        "tabCapture"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*",
                "*://*.bilibili.com/*"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_end"
        }
    ]
}